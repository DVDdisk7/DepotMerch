@using DepotMerch.Data.Products
@using DepotMerch.Services

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var product in Products)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        @if (product.ImageUrl != "" && product.ImageUrl != null)
                        {
                            <!--<img class="card-img-top" src="https://resize.sardo.work?Quality=100&Width=450&Height=300&ImageUrl=@product.ImageUrl" alt="..." />-->
                            <img class="card-img-top" src="@product.ImageUrl" alt="..." />
                        }
                        else
                        {
                            <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                        }
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@product.Name</h5>
                                <!-- Product price-->
                                €@product.Price
                            </div>
                        </div>
                        @if (DisplayViewButton)
                        {
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="/product/@product.Id">Bekijken</a></div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@code {
    [EditorRequired]
    [Parameter]
    public List<Product> Products { get; set; } = new();
    [Parameter]
    public bool DisplayViewButton { get; set; }
}